{
  "name": "guofsyrians-backend-hono",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "deploy:config:local": "wrangler deploy --minify --config wrangler.local.jsonc",
    "db:migrate:local": "wrangler d1 migrations apply guofsyrians-backend-hono-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply guofsyrians-backend-hono-db --remote",
    "db:migrate:remote:config:local": "wrangler d1 migrations apply guofsyrians-backend-hono-db --remote --config wrangler.local.jsonc",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "^4.9.5"
  },
  "devDependencies": {
    "wrangler": "^4.4.0"
  }
}